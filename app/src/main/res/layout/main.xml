<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    >
<TextView
    android:id="@+id/message"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text=""
    />
<TableLayout android:layout_width="wrap_content" 
      android:layout_height="wrap_content">
  <TableRow>
    <TextView
      android:layout_width="fill_parent"
      android:padding="5dip"
      android:layout_height="wrap_content"
      android:gravity="right"
      android:text="URL:"
    />
    <TextView
      android:id="@+id/url"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:padding="5dip"
      android:text=""
    />
  </TableRow>
  <TableRow>
    <TextView
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:padding="5dip"
      android:gravity="right"
      android:text="Status:"
    />
    <TextView
      android:id="@+id/transport_status"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:padding="5dip"
      android:text=""
    />
  </TableRow>
  <TableRow>
    <TextView
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:gravity="right"
      android:text="Title:"
      android:padding="5dip"
    />
    <TextView
      android:id="@+id/title"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:padding="5dip"
      android:text=""
    />
  </TableRow>
  <TableRow>
    <TextView
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:padding="5dip"
      android:gravity="right"
      android:text="Album:"
    />
    <TextView
      android:id="@+id/album"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:padding="5dip"
      android:text=""
    />
  </TableRow>
  <TableRow>
    <TextView
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:gravity="right"
      android:padding="5dip"
      android:text="Artist:"
    />
    <TextView
      android:id="@+id/artist"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:padding="5dip"
      android:text=""
    />
  </TableRow>
</TableLayout>

<View
   android:layout_width="fill_parent"
   android:layout_height="10dip"
/>

<View
   android:layout_width="fill_parent"
   android:layout_height="2dp"
   android:background="#c0c0c0"
/>

<View
   android:layout_width="fill_parent"
   android:layout_height="10dip"
/>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:gravity="center_horizontal"
    >
  <ImageButton xmlns:android="http://schemas.android.com/apk/res/android"
      android:id="@+id/button_shutdown"
      android:background="@drawable/button_shutdown"
      android:layout_width="32dp"
      android:layout_height="32dp"
      android:onClick="buttonShutdownClicked" />
  <ImageButton xmlns:android="http://schemas.android.com/apk/res/android"
      android:id="@+id/button_settings"
      android:background="@drawable/button_settings"
      android:layout_width="32dp"
      android:layout_height="32dp"
      android:onClick="buttonSettingsClicked" />
  <ImageButton xmlns:android="http://schemas.android.com/apk/res/android"
      android:id="@+id/button_prev"
      android:background="@drawable/button_prev"
      android:layout_width="32dp"
      android:layout_height="32dp"
      android:onClick="buttonPrevClicked" />
  <ImageButton xmlns:android="http://schemas.android.com/apk/res/android"
      android:id="@+id/button_play"
      android:background="@drawable/button_play"
      android:layout_width="32dp"
      android:layout_height="32dp"
      android:onClick="buttonPlayClicked" />
  <ImageButton xmlns:android="http://schemas.android.com/apk/res/android"
      android:id="@+id/button_stop"
      android:background="@drawable/button_stop"
      android:layout_width="32dp"
      android:layout_height="32dp"
      android:onClick="buttonStopClicked" />
  <ImageButton xmlns:android="http://schemas.android.com/apk/res/android"
      android:id="@+id/button_pause"
      android:background="@drawable/button_pause"
      android:layout_width="32dp"
      android:layout_height="32dp"
      android:onClick="buttonPauseClicked" />
  <ImageButton xmlns:android="http://schemas.android.com/apk/res/android"
      android:id="@+id/button_next"
      android:background="@drawable/button_next"
      android:layout_width="32dp"
      android:layout_height="32dp"
      android:onClick="buttonNextClicked" />
</LinearLayout>

</LinearLayout>

